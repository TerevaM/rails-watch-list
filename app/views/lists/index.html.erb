<div class="container-fluid bck_lists d-flex justify-content-center align-items-center">

<h1>Save any kind of movies</h1>
</div>
<div id="titles">
<h3>My lists</h3>
<%= link_to 'My lists', lists_path %>
</div>
<ul class="lists">
<% @lists.each do |list| %>
<li>
<div class="card">
  <div class="card-body d-flex justify-content-center align-items-center">
    <%= link_to list.name, list %>
  </div>
</div>
</li>

<% end %>
</ul>
